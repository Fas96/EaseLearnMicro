<?xml version="1.0" encoding="UTF-8"?>
<model name="bbs:contentModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

    <!-- Optional meta-data about the model -->
    <description>BBS Model</description>
    <author>SooMyung Lee</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco System Model Definitions -->
        <import uri="http://www.alfresco.org/model/system/1.0" prefix="sys"/>
    </imports>

    <!-- Custom namespace for your domain -->
    <namespaces>
        <namespace uri="http://bbs.argonet.co.kr/model/content/1.0" prefix="bbs"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->
        
  <types>
       <type name="bbs:content">
         <title>Content</title>
         <parent>cm:content</parent>
         <properties>
            <property name="bbs:author">
               <title>Author</title>
               <type>d:text</type>
               <index enabled="true">
                  <atomic>false</atomic>
                  <stored>true</stored> 
                  <tokenised>false</tokenised>
                  <facetable>false</facetable>
               </index>
            </property>
             <property name="bbs:hit">
               <title>Hit</title>
               <type>d:int</type>
               <mandatory>true</mandatory>
               <default>0</default>
            </property>
         </properties> 
         
         <associations>
            <!-- This association links the source content node to the rendition -->
            <child-association name="bbs:attached">
               <source>
                  <mandatory>false</mandatory>
                  <many>false</many>
               </source>
               <target>
                  <class>bbs:attachment</class>
                  <mandatory>false</mandatory>
                  <many>true</many>
               </target>
            </child-association>
         </associations>
      </type>
      <type name="bbs:attachment">
         <title>Attatchment</title>
         <parent>cm:content</parent>
         <archive>false</archive>
         <includedInSuperTypeQuery>false</includedInSuperTypeQuery>
      </type>
  </types>

  <aspects>
  
   </aspects>    
</model>