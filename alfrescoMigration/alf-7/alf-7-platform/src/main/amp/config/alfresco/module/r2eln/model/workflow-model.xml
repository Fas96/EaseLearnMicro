<?xml version="1.0" encoding="UTF-8"?>
<model name="elnwf:workflowModel" xmlns="http://www.alfresco.org/model/dictionary/1.0">
    <!-- Optional meta-data about the model -->
    <description>Workflow Model for R2ELN</description>
    <author>SooMyung Lee</author>
    <version>1.0</version>

    <imports>
        <!-- Import Alfresco Dictionary Definitions -->
        <import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d"/>
        <!-- Import Alfresco Content Domain Model Definitions -->
        <import uri="http://www.alfresco.org/model/content/1.0" prefix="cm"/>
        <!-- Import Alfresco Workflow Model Definitions -->
        <import uri="http://www.alfresco.org/model/bpm/1.0" prefix="bpm"/>
    </imports>

    <!-- Custom namespace for your domain -->
    <namespaces>
        <namespace uri="http://r2eln.argonet.co.kr/model/workflow/1.0" prefix="elnwf"/>
    </namespaces>

    <!-- ===============================================================================================================
        Constraints, Types, and Aspects go here...
        -->

    <types>
        <type name="elnwf:submitReviewTask">
            <parent>bpm:startTask</parent>
            <properties>
                <property name="elnwf:workflowType">
                    <type>d:text</type>
                    <mandatory>true</mandatory>
                    <multiple>false</multiple>
                    <constraints>
                        <constraint name="elnwf:workflowTypeOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
									<value>TIMESTAMP</value>
									<value>CREATENOTE</value>
									<value>TRANSFER</value>
									<value>ADDNOTE</value>
									<value>SUBMIT</value>
									<value>KEEP</value>
									<value>RENT</value>
									<value>RETURN</value>
									<value>UNSUBMIT</value>
									<value>TAKEOUT</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
                <property name="elnwf:contentId">
                    <type>d:text</type>
                    <mandatory>false</mandatory>
                    <multiple>false</multiple>
                </property>
            </properties>
            <associations>
                <association name="elnwf:receiver">
                    <source>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </target>
                </association>
                <association name="elnwf:assignee">
                    <source>
                        <mandatory>false</mandatory>
                        <many>false</many>
                    </source>
                    <target>
                        <class>cm:person</class>
                        <mandatory>true</mandatory>
                        <many>false</many>
                    </target>
                </association>
            </associations>
        </type>
        <type name="elnwf:confirmTask">
            <parent>bpm:activitiOutcomeTask</parent>
            <overrides>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.alfresco.org/model/bpm/1.0}outcome</default>
                </property>
                <property name="bpm:outcome">
                    <default>Approve</default>
                    <constraints>
                        <constraint name="elnwf:confirmOutcomeOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>Confirm</value>
                                    <value>Reject</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </overrides>
        </type>
        <type name="elnwf:rejectedTask">
            <parent>bpm:activitiOutcomeTask</parent>
            <overrides>
                <property name="bpm:packageItemActionGroup">
                    <default>edit_package_item_actions</default>
                </property>
                <property name="bpm:outcomePropertyName">
                    <default>{http://www.alfresco.org/model/bpm/1.0}outcome</default>
                </property>
                <property name="bpm:outcome">
                    <default>Resubmit</default>
                    <constraints>
                        <constraint name="elnwf:rejectOutcomeOptions" type="LIST">
                            <parameter name="allowedValues">
                                <list>
                                    <value>Resubmit</value>
                                    <value>Cancel</value>
                                </list>
                            </parameter>
                        </constraint>
                    </constraints>
                </property>
            </overrides>
        </type>
    </types>        
        
</model>

