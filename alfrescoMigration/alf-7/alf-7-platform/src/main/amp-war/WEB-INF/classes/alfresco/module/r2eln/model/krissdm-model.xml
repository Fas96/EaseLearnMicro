<?xml version="1.0" encoding="UTF-8"?>
<model name="krissdm:krissdmmodel" xmlns="http://www.alfresco.org/model/dictionary/1.0">

	<description>KrissDM Content Model</description>
	<author>SooMyung Lee</author>
	<published>2014-03-27</published>
	<version>1.0</version>

	<imports>
		<import uri="http://www.alfresco.org/model/dictionary/1.0" prefix="d" />
		<import uri="http://www.alfresco.org/model/content/1.0" prefix="cm" />
	</imports>

	<namespaces>
		<namespace uri="http://krissdm.argonet.co.kr/model/document/1.0" prefix="krissdm" />
	</namespaces>
     
	<types>
		<!-- krissdm-wide measurement date type -->
		<type name="krissdm:dmfolder">
			<title>Measurement Data</title>
			<parent>cm:folder</parent>
			<properties>
				<property name="krissdm:measurand">
					<title>Measurand</title>
					<type>d:text</type>
				</property>
				<property name="krissdm:measurementMethods">
					<title>Measurement methods</title>
					<type>d:text</type>
				</property>
				<property name="krissdm:traceability">
					<title>Traceability</title>
					<type>d:text</type>
				</property>
				<property name="krissdm:uncertainty">
					<title>Uncertainty</title>
					<type>d:text</type>
				</property>
				<property name="krissdm:reproducibility">
					<title>Reproducibility</title>
					<type>d:text</type>
				</property>
				<property name="krissdm:consistency">
					<title>Consistency</title>
					<type>d:text</type>
				</property>
				<property name="krissdm:reviewByExperts">
					<title>Review by experts</title>
					<type>d:text</type>
				</property>
			</properties>
		</type>
	</types>

</model>